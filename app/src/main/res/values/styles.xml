<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 테마: 상태바를 흰색으로 설정 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- 검정 아이콘 (흰색 상태바) -->
    </style>

    <!-- activity_widght 테마: 상태바를 검정색으로 설정 -->
    <style name="AppTheme.BlackStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- 흰색 아이콘 (검정 상태바) -->
    </style>
</resources>
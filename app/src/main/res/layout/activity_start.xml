<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 질문 텍스트 -->
    <TextView
        android:id="@+id/tv_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:text="기범님,\n좋은 하루 보내셨나요?"
        android:fontFamily="@font/applesdgothicneob"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_start_box"
        android:src="@drawable/main_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_title"/>

    <TextView
        android:id="@+id/tv_start_myinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:text="내 정보"
        android:fontFamily="@font/applesdgothicneob"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_start_title"
        android:layout_marginLeft="30dp"/>


    <ImageView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_start_box2"
        android:src="@drawable/main_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_start_box"/>

    <TextView
        android:id="@+id/tv_start_shower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="100dp"
        android:text="샤워 시작하기"
        android:fontFamily="@font/applesdgothicneob"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_start_box"
        android:layout_marginLeft="30dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/start_btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_start_box"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/main_box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_start_box2" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/main_box2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_start_box2" />

    <TextView
        android:id="@+id/tv_start_change_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:text="샤워 순서 바꾸기"
        android:fontFamily="@font/applesdgothicneob"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_start_box2"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_start_change_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:text="샤워 화면 바꾸기"
        android:fontFamily="@font/applesdgothicneob"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_start_box2"
        android:layout_marginRight="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
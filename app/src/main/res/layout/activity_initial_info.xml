<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 질문 텍스트 -->
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:text="입력하신 정보는\n아래와 같아요 :)"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/iv_shower_info"
        android:src="@drawable/initial_shower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_toothbrush_info"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_shower_info"
        android:text="샤워"
        app:layout_constraintStart_toEndOf="@+id/iv_toothbrush_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_toothbrush_info"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_shower_time_info"
        android:text="15분"
        app:layout_constraintStart_toEndOf="@+id/tv_toothbrush_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_toothbrush_info"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/iv_shower_edit"
        android:src="@drawable/initial_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_toothbrush_info"
        android:layout_marginTop="40dp"
        android:layout_marginStart="300dp"/>

    <!---->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/iv_toothbrush_info"
        android:src="@drawable/initial_toothbrush"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_toothbrush_info"
        android:text="양치"
        app:layout_constraintStart_toEndOf="@+id/iv_toothbrush_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_toothbrush_time_info"
        android:text="3분"
        app:layout_constraintStart_toEndOf="@+id/tv_toothbrush_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/iv_toothbrush_edit"
        android:src="@drawable/initial_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:layout_marginTop="40dp"
        android:layout_marginStart="300dp"/>

    <!---->

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/initial_next"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>

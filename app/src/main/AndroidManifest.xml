<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShowerTimer"
        tools:targetApi="31">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ToothbrushActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ShowerActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ShavingActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ShampooActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".CleansingActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".InitialInfoActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".SetupActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Widget"
            android:theme="@style/AppTheme.BlackStatusBar"/>
        <activity android:name=".ConfirmActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".StartActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>